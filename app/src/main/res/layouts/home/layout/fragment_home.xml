<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeFragment"
    android:background="@color/white">

    <!-- 상단바 -->
    <RelativeLayout
        android:id="@+id/relative_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_instagram_calligraphy"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:layout_marginVertical="12dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/ic_instagram_calligraphy"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/img_heart"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginRight="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_heart_unselected"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_direct_message"/>

        <ImageView
            android:id="@+id/img_direct_message"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginRight="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_direct_message"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</RelativeLayout>